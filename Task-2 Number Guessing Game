import java.util.*;
class Guess
{
	public void Game()
	{
		Random rand=new Random();
		Scanner sc=new Scanner(System.in);
		int compVal=rand.nextInt(10);
		System.out.println();
		System.out.println("I have generated a Number ğŸ˜‰");
		System.out.println();
		System.out.println("How many chances will you take to guess???ğŸ¤” ğŸ¤”.\'less than 10\'");
		
		int chance=sc.nextInt();
		System.out.println();
		while(chance>10)
		{
		    System.out.println();
			System.out.println("oops!!!!.Enter a number less than 10 yaarr.. ğŸ˜’");
			System.out.println();
			chance=sc.nextInt();
		}
		System.out.println();
		System.out.println("So..you can guess my number in  "+chance+" Ahhh...Great lets play ğŸ˜œ");
		System.out.println();
		int score=100;
		int i=0;
		for(i=0;i<chance;i++)
		{
		    System.out.println();
			System.out.println("Enter your number ğŸ˜‰ . Chance no "+(i+1));
			int userValue=sc.nextInt();
			if(userValue==compVal)
			{
			    System.out.println();
				System.out.println("Congratulations!!!!!!! You won the challenge âœ¨");
				System.out.println();
				System.out.println("Your score is \'"+score+"\'");
				System.out.println();
				break;
			}
			else if(userValue>compVal)
			{
			    System.out.println();
				System.out.println("Your number is greater than my number... ğŸ˜œ ğŸ˜œ");
				System.out.println();
			}
			else
			{
			    System.out.println();
				System.out.println("Your number is less than my number... ğŸ˜œ ğŸ˜œ");
				System.out.println();
			}
			score-=10;
		} 
		if(i>=chance)
		{
		    System.out.println();
			System.out.println("So...My number is "+compVal);
			System.out.println();
			System.out.println("Better Luck Next Time ğŸ™ŒğŸ‘");
			System.out.println();
			System.out.println("Your score is \'0\' ");
			System.out.println();
		}
	}
}
class Main
{
public static void main(String args[])
{
 System.out.println("Welcome To The World of Guessing !!!!!!!âœ¨");
	System.out.println();
	Scanner sc=new Scanner(System.in);
	Guess guess=new Guess();
	System.out.println("Are You Ready.....: Yes/No");
	System.out.println();
	String s=sc.nextLine();
	while(s.equalsIgnoreCase("Yes")||s.equalsIgnoreCase("y"))
	{
		guess.Game();
		System.out.println();
		System.out.println("Do you want to continue The Game Yes/No");
		s=sc.nextLine();
		System.out.println();
	}
}
}
